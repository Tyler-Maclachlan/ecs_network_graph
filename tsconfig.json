{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types",
      "typings",
    ],
    "lib": ["dom", "esnext", "es2015"],
    "importHelpers": true
  },
  "include": [
    "src/**/*.ts"
  ]
}